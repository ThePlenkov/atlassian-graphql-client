{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsdown",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "default",
        "^default",
        "{projectRoot}/tsdown.config.ts",
        "{workspaceRoot}/tsdown.config.mjs"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ],
      "cache": true,
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "outputs": [
        "{projectRoot}/coverage"
      ],
      "cache": true
    },
    "lint": {
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/eslint.config.mjs"
      ]
    }
  },
  "nxCloudId": "68fe37fdf3953438877ebdcb",
  "sync": {
    "disabledTaskSyncGenerators": ["@nx/js:typescript-sync"]
  },
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        }
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint",
        "extensions": ["ts", "tsx", "js", "jsx"]
      }
    }
  ]
}
