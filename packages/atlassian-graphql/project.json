{
  "name": "graphql",
  "targets": {
    "gen:schema": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/filter-schema.ts",
        "cwd": "packages/atlassian-graphql"
      },
      "inputs": [
        "{projectRoot}/sdk.config.ts",
        "{projectRoot}/scripts/filter-schema.ts"
      ],
      "outputs": [
        "{projectRoot}/src/generated/schema.graphql",
        "{projectRoot}/src/generated/schema.full.graphql"
      ],
      "cache": true
    },
    "gen:codegen": {
      "executor": "nx:run-commands",
      "dependsOn": ["gen:schema", "argsmap:build"],
      "options": {
        "command": "graphql-codegen --config codegen.ts",
        "cwd": "packages/atlassian-graphql"
      },
      "inputs": [
        "{projectRoot}/src/generated/schema.graphql",
        "{projectRoot}/codegen.ts"
      ],
      "outputs": [
        "{projectRoot}/src/generated/schema-types.ts",
        "{projectRoot}/src/generated/args-map.ts"
      ],
      "cache": true
    },
    "gen:codegen-full": {
      "executor": "nx:run-commands",
      "dependsOn": ["gen:schema"],
      "options": {
        "command": "graphql-codegen --config codegen.full.ts",
        "cwd": "packages/atlassian-graphql"
      },
      "inputs": [
        "{projectRoot}/src/generated/schema.full.graphql",
        "{projectRoot}/codegen.full.ts"
      ],
      "outputs": [
        "{projectRoot}/src/generated/schema-types.full.ts"
      ],
      "cache": true
    },
    "gen": {
      "executor": "nx:run-commands",
      "dependsOn": ["gen:schema", "gen:codegen", "gen:codegen-full"],
      "options": {
        "commands": [
          "nx run graphql:gen:schema",
          "nx run graphql:gen:codegen",
          "nx run graphql:gen:codegen-full"
        ],
        "parallel": false
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["gen:codegen", "^build"],
      "options": {
        "commands": [
          "tsdown",
          "mkdir -p dist/generated && cp src/generated/schema.graphql dist/generated/"
        ],
        "cwd": "packages/atlassian-graphql",
        "parallel": false
      },
      "inputs": [
        "default",
        "^default",
        "{projectRoot}/src/generated/**",
        "{projectRoot}/tsdown.config.ts",
        "{workspaceRoot}/tsdown.config.mjs"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ],
      "cache": true
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "dependsOn": ["gen:codegen", "gen:codegen-full"],
      "options": {
        "command": "tsc --build --emitDeclarationOnly",
        "cwd": "packages/atlassian-graphql"
      },
      "inputs": [
        "default",
        "^default",
        "{projectRoot}/src/generated/**",
        "{projectRoot}/tsconfig.json",
        "{workspaceRoot}/tsconfig.base.json"
      ],
      "cache": true
    },
    "list:queries": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/list-queries.ts",
        "cwd": "packages/atlassian-graphql"
      }
    },
    "list:modules": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/list-modules.ts",
        "cwd": "packages/atlassian-graphql"
      }
    },
    "analyze": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/analyze-structure.ts",
        "cwd": "packages/atlassian-graphql"
      }
    }
  }
}