{
  "name": "gqlb",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/gqlb/src",
  "projectType": "library",
  "targets": {
    "build": {},
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rm -rf dist",
          "rm -rf tests/schema/generated"
        ],
        "cwd": "packages/gqlb",
        "parallel": false
      }
    },
    "test:codegen": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "npm run test:codegen",
        "cwd": "packages/gqlb"
      },
      "inputs": [
        "{projectRoot}/tests/schema/schema.graphql",
        "{projectRoot}/tests/schema/codegen.ts",
        "^default"
      ],
      "outputs": [
        "{projectRoot}/tests/schema/generated"
      ],
      "cache": true
    },
    "test:typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run test:typecheck",
        "cwd": "packages/gqlb"
      },
      "dependsOn": ["test:codegen"],
      "inputs": [
        "default",
        "{projectRoot}/tests/schema/generated/**",
        "{projectRoot}/tests/tsconfig.json",
        "{workspaceRoot}/tsconfig.base.json"
      ],
      "cache": true
    },
    "test:run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run test:run",
        "cwd": "packages/gqlb"
      },
      "dependsOn": ["build", "test:typecheck"],
      "inputs": [
        "default",
        "^default",
        "{projectRoot}/tests/**/*.test.ts"
      ],
      "cache": true
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [],
        "parallel": false
      },
      "dependsOn": ["test:codegen", "test:typecheck", "test:run"]
    }
  }
}

