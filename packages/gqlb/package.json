{
  "name": "gqlb",
  "version": "0.1.5",
  "description": "Runtime proxy-based GraphQL query builder with type safety",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./codegen": {
      "import": "./dist/codegen-utils.js",
      "types": "./dist/codegen-utils.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test:codegen": "graphql-codegen --config tests/schema/codegen.ts",
    "test:typecheck": "tsc --noEmit -p tests/tsconfig.json",
    "test:run": "npx tsx --test tests/index.test.ts"
  },
  "keywords": [
    "graphql",
    "query-builder",
    "typescript",
    "proxy",
    "type-safe"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gqlb/gqlb",
    "directory": "packages/gqlb"
  },
  "homepage": "https://github.com/gqlb/gqlb#readme",
  "bugs": {
    "url": "https://github.com/gqlb/gqlb/issues"
  },
  "license": "MIT",
  "peerDependencies": {
    "graphql": "^15.0.0 || ^16.0.0"
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.1.2"
  }
}
