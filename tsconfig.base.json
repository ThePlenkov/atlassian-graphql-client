{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@atlassian-tools/gql": ["packages/atlassian-graphql/src/index.ts"],
      "@atlassian-tools/cli": ["packages/atlassian-cli/src/index.ts"],
      "gqlb": ["packages/gqlb/src/index.ts"],
      "cli-oauth": ["packages/cli-oauth/src/index.ts"],
      "graphql-codegen-args-map": ["packages/graphql-codegen-args-map/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
